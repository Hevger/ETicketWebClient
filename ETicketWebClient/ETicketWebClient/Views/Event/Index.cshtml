@model IEnumerable<ETicketWebClient.ETicketService.Event>

@{
    ViewBag.Title = "Events";
}

<h2>Events</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AvailableTickets)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Gate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GateOpens)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TicketPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AvailableTickets)
        </td>
        <td>
            @{ var Date = item.Date.ToString("dd-MM-yyyy"); }
            @Html.DisplayFor(modelItem => Date)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Gate)
        </td>
        <td>
            @{ var GateOpens = item.GateOpens.ToString("HH:mm"); }
            @Html.DisplayFor(modelItem => GateOpens)
        </td>
        <td>
            @{ var StartTime = item.StartTime.ToString("HH:mm"); }
            @Html.DisplayFor(modelItem => StartTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TicketPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.EventId }) |
            @Html.ActionLink("Details", "Details", new { id=item.EventId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.EventId })
        </td>
    </tr>
}

</table>
